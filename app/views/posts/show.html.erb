<div class="main posts-show">
  <div class="container">
    <div class="posts-show-item">
      <p>
        <%= @post.content %>
      </p>
      <div class="post-time">
        <%= "投稿日時: #{@post.created_at.to_s(:datetime_jp)}" %>
      </div>
       <% if @current_user == nil%>
       <% elsif @post.user_id == @current_user.id %>
        <%= link_to "編集", edit_post_path(@post) %>
        <%= link_to "削除", post_path(@post), method: :delete %>
       <% end %>
      </div>
    </div>
     <% if @current_user == nil %>
      <li>コメントするにはログインしてください</li>
    <% else %>
      <p>コメントする</p>
        <%= form_for [@post, @comment] do |f| %>
  　　      <div class="field">
    　　      <%= f.text_area :content, placeholder: "ここにコメントしてください" %>
  　　      </div>
  　     <%= f.submit "コメントする", class: "btn btn-primary" %>
　　  <% end %>
　　<% end %>
   <div class="posts-show-item">
    <li>コメント一覧</li>
    　<% @comments.each do |comment|%>
    　 <%= truncate(comment.content,length:100) %>
    　  <div class="post-time">
        <%= "投稿日時: #{@post.created_at.to_s(:datetime_jp)}" %>
      </div>
    <% end %>
   </div>
</div>