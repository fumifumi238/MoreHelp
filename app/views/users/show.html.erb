<div class="main user-show">
  <div class="container">
    <div class="user">
      <h2>ユーザー名：
        <%= @user.name %>
      </h2>
      <h2>メールアドレス：
        <%= @user.email %>
      </h2>
      <% if @user.id == @current_user.id %>
      <%= link_to "編集", edit_user_path(@user) %>
      <% end %>
          </div>
      </div>
    </div>
      <div class="main posts-index">
        <div class="container">
          <h2 class="posts-list">自分の投稿</h2>
          <% if  @posts.length == 0 %>
           <h2 class="text-center text-danger">投稿がありません</h2>
          <% end %>
          <% @posts.each do |post| %>
          <div class="posts-index-item">
            <div class="post-right">
              <%= link_to truncate(post.content,length:100), post, data: {"turbolinks" => false} %>
            </div>
          </div>
          <% end %>
          <%= paginate @posts %>
  </div>
</div>